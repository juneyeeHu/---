.container1 {
  padding: 20px;
}

.header {
  margin-bottom: 20px;
  /* align-items: center; */
}
.icon-title {
  width: 24px;
  height: 24px;
  margin-right: 8px;
}
.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 5px;
  align-items: center;
  /* position: relative; */
  /* justify-content: center; */
  align-items: center;
  display: flex; /* 使用flex布局 */
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */

}

.input {
  margin-bottom: 10px;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 4px;
  width: 100%;
  box-sizing: border-box;
}

.share-button {
  position: absolute;
  right: 10px;
  top: 10px;
  background-color: transparent;
  border: none;
  padding: 0;
  margin: 10px;
  width: 30px;
  height: 30px;
  cursor: pointer;
}

.share-icon {
  width: 100%;
  height: 100%;
}

.content {
  margin-top: 0px;
}

.section {
  margin-bottom: 20px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

