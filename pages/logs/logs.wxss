.qa-record, .health-record {
  padding: 10px;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin-bottom: 10px;
  margin-top: 15px;
}

.qa-question {
  font-weight: bold;
}

.qa-answer {
  margin-top: 5px;
}

.menu-item {
  display: flex;
  align-items: center;
  font-size: 20px;
  font-weight: bold;
}

.vertical-line {
  width: 4px;
  height: 16px;
  background-color: rgb(20, 116, 8);
  margin-right: 8px;
  margin-left: 10px;
}

.horizontal-line {
  margin-right: 3px;
  margin-left: 3px;
  height: 1px;
  background-color: rgb(166, 170, 165);
  margin-top: 5px;
}

.icon {
  width: 24px;
  height: 24px;
  margin-right: 8px;
}
