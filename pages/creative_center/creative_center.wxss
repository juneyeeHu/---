}

.location-container {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}
.menu-item {
  display: flex;
  margin-left: 10rpx;
  /* align-items: center; */
}

.vertical-line {
  width: 4px;
  height: 16px; /* 根据文字大小调整竖线的长度 */
  background-color: rgb(129, 118, 20); /* 竖线的颜色 */
  margin-right: 8px; /* 调整竖线与文字的间距 */
  margin-left: 10rpx; /* 调整竖线与小程序最左侧的距离 */
}

.text {
  margin-top: 50px; /* 调整文字与竖线的垂直间距 */
}

.horizontal-line {
  margin-right: 3px; /* 调整竖线与小程序最右侧的距离 */
  margin-left: 3px; /* 调整竖线与小程序最左侧的距离 */
  height:1px;
  background-color: rgb(166, 170, 165); /* 横线的颜色 */
  margin-top: 5px; /* 调整横线与文字的间距 */
}
.products-section {
  margin-top: 16px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 8px;
}

.product {
  margin-bottom: 16px;
}

.product-container {
  display: flex;
  align-items: center; /* 确保图片在竖直方向上居中对齐 */
  padding: 16px;
  background-color: white;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 100px;  /* 调整宽度 */
  height: 120px;  /* 调整高度 */
  margin-right: 16px;
  object-fit: cover; /* 保持图片比例，裁剪多余部分 */
  border-radius: 8px; /* 使图片圆角 */
}


.product-info {
  flex: 1;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.product-name {
  font-size: 16px;
  font-weight: bold;
}

.product-description {
  font-size: 14px;
  color: gray;
}