/*最外侧对话框的大小*/
.box {
  height: 87vh;
  margin-top: 3%;
  background-color: #F5F5F5;
  border-bottom: solid 1vh #F5F5F5;
}

/*用户对话框*/
.user-dialogue {
  justify-content: flex-end;
  display: flex;
  flex-direction: row;
  margin-top: 3%;
  margin-bottom: 1%;
  margin-right: 1%
}

/*用户的头像*/
.user-image {
  margin-left: 3%;
  margin-right: 1%;
  height: 80rpx;
  width: 80rpx;
}

.user-image-img {
  border-radius: 15%;
  height: 80rpx;
  width: 80rpx;
}

/*用户的对话气泡*/
.user-bubble {
  margin-left: 10%;
  padding: 2%;
  background-color: lightgreen;
  border-radius: 15rpx;
  max-width: 35vh;
}

.user-bubble text {
  word-wrap: break-word;
}

/*如果既有图像信息又有文本信息*/
.user-both {
  display: flex;
  flex-direction: column;
}

.user-both image {
  margin-top: 1vh;
  width: 35vh;
}

/*气泡右边的小三角*/
.angle-right {
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  border-left: 12rpx solid lightgreen;
  margin-top: 3%;
  height: 1rpx;
}

/*AI对话框*/
.ai-dialogue {
  display: flex;
  flex-direction: row;
  margin-top: 3%;
  margin-bottom: 1%
}

/*AI的图像*/
.ai-image {
  margin-left: 3%;
  margin-right: 1%;
  height: 80rpx;
  width: 80rpx;
}

.ai-image-img {
  border-radius: 15%;
  height: 80rpx;
  width: 80rpx;
}

/*气泡左边的小三角*/
.angle-left {
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  border-right: 12rpx solid white;
  margin-top: 3%;
  height: 1rpx;
}

/*AI的对话气泡*/
.ai-bubble {
  margin-right: 10%;
  padding: 2%;
  background-color: white;
  border-radius: 15rpx;
  max-width: 35vh;
}

/*下方输入的部分*/
.input {
  display: flex;
  flex-direction: row;
  height: 10vh;
  position: fixed;
  bottom: 0;
  background-color: white;
}

/*语音输入图标*/
.input-voice {
  margin-top: 2vh;
  height: 6vh;
  width: 5vh;
}

.input-voice image {
  height: 4vh;
  width: 4vh;
  margin-top: 1vh;
  margin-left: 0.5vh;
}

/*图像上传图标*/
.input-picture {
  margin-top: 2vh;
  height: 6vh;
  width: 5vh;
}

.input-picture image {
  height: 4vh;
  width: 4vh;
  margin-top: 1vh;
  margin-left: 0.5vh;
}

/*输入框*/
.input-textarea {
  margin-top: 2vh;
  height: 6vh;
  width: 32vh;
  border-radius: 5%;
  justify-content: center;
  background-color: rgb(248, 248, 248);
  overflow-y: auto; 
}

.input-textarea textarea {
  padding-top: 1vh;
  padding-bottom: 1vh;
  margin-left: 1vh;
  margin-right: 1vh;
  height: 4vh;
}

/*按钮*/
.input-button {
  margin-top: 2vh;
  margin-left: 0.5vh;
  height: 6vh;
  width: 8vh;
  background-color: lightblue;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 2vh;
}

/*录音提示符*/
.recorder {
  border-radius: 5%;
  display: flex;
  flex-direction: column;
  height: 200rpx;
  height: 150rpx;
  position: fixed; /* 使用 fixed 定位 */
  top: 50%; /* 离顶部 50% 处 */
  left: 50%; /* 离左侧 50% 处 */
  transform: translate(-50%, -50%); /* 通过 translate 调整至屏幕中央 */
  background-color: rgba(0, 0, 0, 0.8); /* 设置背景色及透明度 */
  padding: 20px; /* 可以根据需要添加内边距 */
  align-items: center;
}

.recorder text {
  color: white;
}

.recorder image {
  margin-top: 20rpx;
  height: 60rpx;
  width: 60rpx;
}


/*选中图片的展示图*/
.tempImage {
  height: 17vh;
  width: 20vh;
  position: fixed;
  top: 70vh;
  left: 3vh;
  border-radius: 5%;
  background-color: RGB(230, 230, 230);
  align-items: center;
  justify-items: center;
}

.tempImage image {
  margin-left: 1vh;
  margin-top: 0.5vh;
  max-height: 13vh;
  width: 17vh;
}

.tempImage button {
  margin-top: 0.5vh;
  height: 2vh;
  width: 12vh;
  border-radius: 10%;
  background-color: lightgrey;
  font-size: 1vh;
}